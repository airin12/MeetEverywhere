<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="25dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_actions_process_stop"
            android:drawablePadding="35dp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:textSize="25sp"
            android:text="@string/ErrorDialog.errorWarning" />

    </LinearLayout>

    <TextView
        android:id="@+id/ErrorDialog_errorList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_between_items"
        android:layout_gravity="center_horizontal"
        android:text="TextView" />

    <Button
        android:id="@+id/ErrorDialog_OKButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_between_items"
        android:layout_gravity="center_horizontal|center_vertical"
        android:onClick="confirmAndReturnToActivityAction"
        android:text="@string/ErrorDialog.okButton" />

</LinearLayout>